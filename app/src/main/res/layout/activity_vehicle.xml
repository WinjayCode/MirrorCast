<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_wifi_p2p"
        style="@style/BtnStyle"
        android:text="WIFI直连" />

    <EditText
        android:id="@+id/ip_ed"
        style="@style/BtnStyle"
        android:hint="192.168.49.1" />

    <Button
        android:id="@+id/btn_start_record"
        style="@style/BtnStyle"
        android:text="开始投屏"
        android:visibility="gone" />

    <Button
        android:id="@+id/connect_mirror_cast_server"
        style="@style/BtnStyle"
        android:text="连接投屏服务" />

    <Button
        android:id="@+id/btn_start_receive"
        style="@style/BtnStyle"
        android:text="接收投屏" />

    <Button
        android:id="@+id/btn_car_home"
        style="@style/BtnStyle"
        android:text="Car Launcher"
        android:textAllCaps="false" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/aoa_send_btn"
            style="@style/BtnStyle"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:text="发送" />

        <EditText
            android:id="@+id/aoa_ed"
            style="@style/BtnStyle"
            android:layout_toLeftOf="@+id/aoa_send_btn"
            android:hint="有线连接" />
    </RelativeLayout>

    <TextView
        android:id="@+id/aoa_msg_tv"
        style="@style/BtnStyle"
        android:layout_height="match_parent" />
</LinearLayout>